{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": [
            "esnext",
            "esnext.asynciterable",
            "esnext.bigint"
        ],
        "allowJs": false,
        "declaration": true,
        "strict": true,
        "alwaysStrict": true,
        "outDir": "dist",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "baseUrl": "src"
    },
    "include": [
        "src"
    ]
}